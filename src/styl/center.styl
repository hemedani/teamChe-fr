$menu-items = 4
$indicator-color = abi(1)
$transition-speed = 0.8s
$width = 100 / $menu-items * 1%
$menu-items-loop-offset = $menu-items - 1
.with-indicator
  position: relative
  z-index: 0
  overflow: hidden
  .Nav-item
    &:last-child
      &:after
        content: ''
        display: block
        position: absolute
        transition: right $transition-speed ease
        background: $indicator-color
        top: 3px
        bottom: 3px
        right: -20rem
        width: $width - 1
        z-index: -1
        border-radius: 1.5rem
        // margin-right: 3px
        // margin-left: 3px
  for $i in (1)..($menu-items-loop-offset)
    .Nav-item:nth-child({$i}).is-active ~ .Nav-item:last-child:after
      right: ($width * $i - $width)
      margin-right: 0
    .Nav-item:nth-child({$i}).is-active
      right: ($width * $i + $width / 2 - $width)
      margin-right: 0
  for $i in (1)..($menu-items-loop-offset)
    .Nav-item:nth-child({$i}):hover ~ .Nav-item:last-child:after
      right: $width * $i - $width !important
      margin-right: 0
    .Nav-item:nth-child({$i}):hover
      right: $width * $i + $width / 2 - $width !important
      margin-right: 0
  .Nav-item
    color: tosi(1)
    font-size: 0.7rem

    &:nth-child(1).is-active ~ .Nav-item:last-child:after
      margin-right: 3px
    
    &.is-active
      color: sefid(1)
      background-color: abi(1)
    &:last-child
      &:hover, &.is-active
        &:after
          right: 100% - $width !important


