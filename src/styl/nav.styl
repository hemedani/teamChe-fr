.nav-wrapper
  width: 100%
  top: 0
  right: 0
  z-index: 13 
  &.fixed-some-page
    position: fixed
    top: 0
    right: 0
  .logo-nav
    height: 4.5rem
    width: 100%
    display: flex
    flex-flow: row wrap
    justify-content: space-between
    align-items: center
    img
      height: 3rem
      z-index: 13
      filter: drop-shadow(3px 3px 3px #222);

.nav-left
  display: flex
  flex-flow: row wrap
  background-color: sefid(1)
  padding: 0.6rem 1.5rem
  border-radius: 0.5rem
  z-index: 13
  a
    text-decoration: none
    color: abi(1)
    font-size: 0.9rem
    margin-left: 1rem
    &:last-child
      margin-left: 0
    &.selected
      background-color: transparent !important
      color: abi(1) !important

.fixed-nav
  position: fixed
  background-color: abi(1)
  height: 4rem
  width: 100%
  top: 0
  right: 0
  z-index: 10
  transition opacity 0.5s
  opacity: 0
  &.enable
    opacity: 1
  .nav-wrapper
    width: 100%
    height: 100%
    display: flex
    flex-flow: row wrap
    justify-content: space-between
    align-items: center
    
    .in-fixed-nav
      height: 100%
      display: flex
      flex-flow: row wrap
      justify-content: space-between
      align-items: center
      padding: 0 1rem
      .img-wrapper
        height: 1.8rem
        padding: 0.2rem 1.5rem 0 1.5rem
        background-color: sefid(1)
        border: 1px solid secondary(1)
        border-radius: 2rem
        margin-left: 0.5rem
        img
          height: 90%
      .nav-left
        background-color: transparent
        a
          color: sefid(1)
          &.selected
            color: sefid(1) !important

    .nav-btn
      height: 1.8rem !important
      padding: 0 2rem
      border-color: sefid(1)
      line-height: 1.65rem
      margin-left: 0.5rem
      &:last-child
        margin-left: 0
    
    .cart-wrapper
      color: sefid(1)

.nav-container
  width: 100%
  .nav-btn
    box-shadow: none
    background-color: abi(1) !important
    border-radius: 0.8rem
    &::after
      left: 0
      top: 3.5rem
      background-color: secondary(1) !important
    &:hover
      border-color: sefid(1) !important
      color: sefid(1) !important
      &::after
        top: 0
  .selected
    background-color: sefid(1) !important
    color: secondary(1) !important
    border-color: secondary(1) !important

      

.dar-nav
  width: 100%
  height: 3.5rem
  display: flex
  justify-content: space-between
  align-items: center
  position: relative
  z-index: 13
  &:before
    content: ''
    position: absolute
    width: calc(100% - 20rem)
    height: 1px
    background-color: abi(1)
    top: 1.7rem
    right: 3rem
  .jostjo
    display: flex
    align-items: center
    justify-content: flex-end
    z-index: 14
    
