.khane
  min-height: calc(100vh - 8rem)
  display: flex
  align-items: center
  justify-content: center
  align-content: center
  flex-flow: column wrap
  position: relative
  .home-selec-box
    width: 100%
    text-align: center
    display: flex
    align-items: center
    justify-content: center
    flex-flow: row wrap
    .select
      width: 90%
      @media(min-width 800px)
        width: 18rem
        margin-left: 0.7rem
      .Select-control
        border-radius: 0.8rem
  .selec-box-wrapper
    width: 100%
    margin-top: 2rem
    a
      text-decoration: none
      
  .dogme
    width: 90%
    margin-top: 0.7rem
    @media(min-width 800px)
      width: 10rem
      margin-top: 0
    height: 3rem
    border-radius: 0.8rem
    font-size: 1.2rem
    line-height: 2.3rem
    z-index: 0
  .icon-home-wrapper
    text-align: center
    color: sorme(1)
    margin-bottom: 1rem
    img
      width: 7rem
      margin-bottom: 1rem
      filter: drop-shadow(3px 3px 3px #222);
    >div
      font-size: 1.5rem
    >p
      width: 23rem
      line-height: 1.4rem
  .trust
    color: tosi(0.7)
    width: 100%
    text-align: center
    margin-top: auto
    .pinteb-icon
      width: 100%
      font-size: 2rem
      color: abi(1)
      &.first
        font-size: 4rem
        line-height: 0.5rem
      &.second
        line-height: 1.5rem
    .trust-div
      font-size: 1.5rem
      margin: 0 auto
      width: 100vw
      position: relative
      &::before
        content: ''
        position: absolute
        bottom: 0.7rem
        right: 2rem
        height: 2px
        width: calc(50vw - 12rem)
        background-color: abi(1)
      &::after
        content: ''
        position: absolute
        bottom: 0.7rem
        left: 2rem
        height: 2px
        width: calc(50vw - 12rem)
        background-color: abi(1)


.three-section-icon
  display: flex
  flex-flow: row wrap
  justify-content: space-around
  align-items: center
  // min-height: 30rem
  color: tosi(1)
  text-align: center
  .each-section
    width: 100%
    margin: 3rem 0
    padding: 0 2rem
    @media(min-width 768px)
      width: 49%
    @media(min-width 1366px)
      width: 30%
    .icon-section
      color: abi(1)
      font-size: 1.4rem
      margin-bottom: 1rem
      position: relative
      .pinteb-icon
        font-size: 8rem
      .comming-soon-services
        position: absolute
        top: 0
        right: calc(50% - 4.5rem)
        width: 4.5rem
        background-color: abi(1)
        color: sefid(1)
        padding: 0.3rem 0
        border-radius: 0.4rem
        font-size: 1rem
        shadow()
        transition: width 0.3s, right 0.3s, top 0.3s
    &:hover
      .icon-section
        color: secondary(1)
      .comming-soon-services
        background-color: secondary(1)
        width: 8rem
        top: 3rem
        right: calc(50% - 4rem)
    .text-section
      padding: 1rem 0.5rem
      font-size: 0.85rem
      line-height: 1.5rem
      margin-bottom: 1rem

