.wares-wrapper
  display: flex
  flex-flow: row wrap
  width: 100%
  justify-content: center
.ware-type-box
  width: 100%
  max-width: 90rem
  margin: auto
.ware-type-wrapper
  display: flex
  flex-flow: row wrap
  justify-content: center
  text-align: center
  padding: 0 1rem
  @media(min-width 50rem)
    padding: 0 3rem
  .ware-type
    width: 12rem
    min-height: 10rem
    padding: 1rem
    display: flex
    flex-flow: column wrap
    background-color: sefid(0.7)
    margin-left: 1rem
    cursor: pointer
    color: sorme(1)
    border-radius: 1rem
    shadow()
    margin-top: 1rem
    justify-content: center
    align-items: center
    .img-wrapper
      width: 10rem
      height: 7.5rem
      display: flex
      flex-flow: row wrap
      justify-content: center
      align-items: center
      justify-content: center
      overflow: hidden
      margin-bottom: 1rem
      img
        max-height: 100%
        max-width: 80%
    .ware-type-name
      align-self: flex-end
      width: 100%

.minimal-ware-type
  .ware-type
    width: 5.5rem
    min-height: 3.5rem
    cursor: auto
    border-radius: 0.6rem
    font-size: 0.7rem
    padding: 1rem 0
    .img-wrapper
      width: 3.5rem
      height: 2rem

.modal-ware-wrapper
  .modal-ware
    height: 60vh
    width: 80%
    max-width: 85rem
    top: 15%
    padding: 0
    overflow: visible
    .next-ware
      position: absolute;
      top: 47%
      right: -2rem
      font-size: 4.5rem
      cursor: pointer
    .previous-ware
      position: absolute;
      top: 47%
      left: -2rem
      font-size: 4.5rem
      cursor: pointer
    .ware-modal-img-div
      position: absolute
      height: 100%
      width: 55%
      top: 0
      left: 0
      border-top-left-radius: 0.5rem
      border-bottom-left-radius: 0.5rem
      overflow: hidden
      img
        height: 100%
        min-width: 100%

.ware-modal-detail
  position: absolute
  height: 100%
  width: 45%
  right: 0
  top: 0
  display: flex
  flex-flow: column wrap
  padding: 1rem 2rem
  
.ware-common
  width: 100%
  display: flex
  align-items: center
  justify-content: space-between
  border-bottom: 1px solid lighten(tosi(1), 50%)
  p
    font-size: 1.3rem
    color: lighten(tosi(1), 30%)
  &:last-child
    border-bottom: none

.ware-cart
  flex: 1
  display: flex
  margin-top: 1rem

  .ware-your-rate
    flex: 1
  .ware-rates-text
    flex: 4
    align-items: flex-start
    overflow-y: scroll
    .ware-rate-text
      width: 100%
      display: flex
      flex-flow: row wrap
      padding: 1.5rem 0
      color: lighten(tosi(1), 30%)
      border-bottom: 1px solid lighten(tosi(1), 60%)
      .ware-rate-pic
        width: 22%
        img
          width: 5rem
          height: 5rem
          border-radius: 50%
      .ware-rate-detail
        width: 76%
        display: flex
        flex-flow: row wrap
        text-align: right
        .ware-rate-name
          width: 100%
          font-weight: bold
        .ware-rate-tx
          width: 100%
  .ware-your-text
    flex: 1
    textarea
      width: 80%
      padding: 0.5rem 1rem
      font-size: 0.9rem
      border-radius: 0.4rem
      border: 1px solid abi(1)
    .dogme
      width: 19%
.star-ratings
  direction: ltr