  border-top 2px solid lighten(sorme(1), 60%)
  font-size 13px
  box-shadow 0 -1.5px 15px darken(ghermez(1), 85%)
  color: rgb(255, 255, 255)
  .baloot-pasafe
    background-image url('../img/back/kashi/3.png')
    min-height: 11rem
    display flex
    flex-direction row
    flex-flow: row wrap
    justify-content center
    padding: 1.5rem 3rem

    .address-b
      flex-basis: 100%
      @media(min-width 900px)
        flex-basis: 74%
    .aks-pasafe
      flex-basis: 100%
      @media(min-width 900px)
        flex-basis: 25%
      margin: 0 auto
      text-align: center
      img
        width: 8rem
        height: 8rem
        border-radius: 50%
        border: 1px solid lighten(bezh(1), 40%)
    .address-b
      font-size: 1rem
  .hoghogh
    min-height: 2rem
    text-align center
    border-top 1px solid lighten(sorme(1), 60%)
    font-size 13px
    color: rgb(255, 255, 255)
    display flex
    flex-direction row
    flex-flow: row wrap
    justify-content center
    .esme
      height: 100%
      flex-basis: 100%
      @media(min-width 900px)
        flex-basis: 60%
      a
        cursor pointer
        line-height 2.6
        margin 0
        background-color abi(0.5)
        padding 0 15px
        border-radius 15px
    .hagh
      flex-basis: 100%
      @media(min-width 900px)
        flex-basis: 40%
