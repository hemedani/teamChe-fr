.pac-container
  z-index: 99999999999
  position: absolute

.leaflet-container
  direction: ltr !important
  height: 100%
  width: 100%

.maxbox-wrapper
  position relative
  .my-map-search-box
    position: absolute
    width: 60%
    top: 1rem
    right: 20%
    z-index: 2
    .map-serach-box-input
      width: 100%
      height: 1.5rem
      padding: 1rem
    .showing-place-wrapper
      max-height: 12rem
      background-color sefid(0.8)
      border-bottom-left-radius: 0.5rem
      border-bottom-right-radius: 0.5rem
      color: tosi(1)
      overflow-y: auto
      .showing-place
        height 2rem
        padding: 0.5rem 1.5rem
        cursor pointer
        overflow hidden
        font-size: 0.8rem
        &:hover
          color: abi(1)
          background-color: sefid(1)

    .dot-loader-witout-wrapper
      position: absolute
      top: 0
      left: 0
      .loading-dots--dot
        width: 0.6rem
        height: 0.6rem
    .icon-close
      position: absolute
      top: 0.5rem
      left: 1rem
      color: sorme(1)
      cursor pointer



