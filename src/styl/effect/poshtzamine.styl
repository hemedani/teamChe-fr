.fasbaghal
	width: 100%
.grid
	position relative
	background: inherit
	margin 1rem 0
	overflow: hidden
	background-color: rgba(255, 255, 255, 0.8)
	border: 1px solid lighten(tosi(1), 70%)
	border-radius: 0.5rem
	display: flex
	flex-flow: row wrap
	color: lighten(tosi(1), 40%)
	shadow()

	width: 100%
	
	h1
		position: relative
		padding: 10px 30px 10px 0
		margin: 0
		line-height: 40px
		width: 100%
		font-weight: normal
		text-align: right
		font-size: 1.5rem
		&::after
			content: ''
			position: absolute
			top: 4rem
			width: 50%
			right: 1.5rem
			border-bottom: 1px solid abi(1)
	.poshtzamine
		width: 100%
		overflow: hidden
		font-size: 0.92rem
		padding: 0.7rem
		
		@media(min-width 50rem)
			padding: 20px 32px 32px 32px

.grid-section
		display: flex
		flex-flow: row wrap
		width: 100%
		justify-content: space-between
	.grid-manage
		flex: 1 1 25rem
		padding: 0.8rem 0.5rem 0.5rem 1rem
		display: flex
		flex-flow: row wrap
		justify-content: space-between
		shadow()
		borderRadius()
		border: 1px solid tosi(0.2)
		overflow: hidden
		margin: 0.5rem 0
		min-height: 10rem
		
		@media(min-width 50rem)
			margin: 0.5rem
		
		.grid-manage-pic
			flex: 2
			display: flex
			justify-content: center
			align-items: center
			border-radius: 50%
			margin-left: 1rem
			img
				width: 3.5rem
				height: 3.5rem
		.grid-manage-detail
			flex: 5
			display: flex
			flex-flow: row wrap
			.btns
				align-self: flex-end
				width: 100%
				text-align: left
			.grid-manage-text
				margin-bottom: 0.4rem
				width: 100%
				.grid-m-t-n
					font-size: 1.2rem
					margin-bottom: 0.3rem
					color: sorme(1)
				.grid-m-t-a
					font-size: 0.85rem


.detail-full-width
	width: 100% !important


.grid-manage-btn
	text-align: left
	width: 100%
	margin-top: 1.2rem
	align-self: flex-end
	
