.modal-darbar
	background-color: rgba(0, 0, 0, 0.7)
	position: fixed
	top: 0
	bottom: 0
	right: 0
	left: 0
	z-index: 999999999
	text-align: center
	display: flex
	justify-content: center

	.modal
		position: fixed
		top: 5%
		width: 90%
		max-width: 70rem
		max-height: 90vh
		background-color: lighten(bezh(0.9), 100%)
		border-radius: 0.5rem
		padding: 20px
		overflow-y: auto
		z-index: 99999999999999

		h1
			color: rgba(35, 31, 32, 0.8)
			margin: 0
	
	.modal-back
		position: fixed
		top: 0
		bottom: 0
		right: 0
		left: 0
		z-index: 999
	.modal-select-box
		max-width: 22rem
		margin-top: 5%
		z-index: 99999999999999
		max-height: 15rem
		padding: 1rem 2rem
		border-radius: 0.5rem
		background-color: lighten(bezh(0.9), 100%)
		h1
			color: lighten(abi(1), 15%)
			padding-bottom: 1rem
			border-bottom: 1px solid abi(1)

	.full-screen-gallery
		background-color: transparent
		direction: ltr !important
		max-height: 100vh
		.image-gallery
			max-height: 100vh
			.image-gallery-slide
				background: transparent
			.image-gallery-image
				max-height: 80vh
				img
					height auto
					width: 100%
					@media(min-width 800px)
						height: 80vh
						width: auto


	.filter-modal
		width: 100%
		max-width: 100%
		height: 70%
		top: auto
		bottom: 0
		right: 0
		background-color: sefid(1)
		border-radius: 0
		padding: 0
		display: flex
		flex-flow: row wrap
		align-items: center
		justify-content: center

		.filter-header
			align-self: flex-start
			width: 100%
			height: 3rem
			background-color: abi(1)
			display: flex
			justify-content: space-between
			align-items: center
			padding: 0 1rem
			.dogme
				background-color: lighten(abi(1), 15%)
				border-radius: 2rem
				margin: 0
				line-height: 1.6rem

		.select
			width: 80%
			margin: 0
			.Select
				margin: 0.5rem 0

		.check-pre-online
			width: 100%
			display: flex
			justify-content: space-around

		.sort-by
			width: 100%
			padding: 0 0.5rem
			text-align: right
			>span
				width: 100%
				color: sorme(1)
				font-size: 0.8rem
				line-height: 1.5rem
			.filter-span-wrapper
				width: 100%
				border: 1px solid lighten(abi(1), 10%)
				display: flex
				text-align: center
				border-radius: 1.5rem
				padding: 0.2rem 0.2rem
				.Nav-item
					flex: 1
					font-size: 0.7rem
					cursor: pointer
					border-radius: 1rem
					padding: 0.2rem 0.2rem


			

