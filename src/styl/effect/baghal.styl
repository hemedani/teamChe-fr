.baghal
	height: 100vh
	position: fixed
	background-color: bezh(0.3)
	top: 0
	bottom: 0
	right: 0
	padding: 2rem 0
	border-left: 1px solid bezh(1)
	box-shadow: 0 10px 8px 0 rgba(0, 0, 0, 0.8), 0 6px 20px 0 rgba(0, 0, 0, 0.19)
	display: flex
	flex-flow: column
	justify-content: center
	align-items: center
	align-content: center
	width: 5.5rem
	overflow-y: auto
	hr
		width: 100%
	.baghal-dogme
		display: flex
		flex-flow: column
		align-items: center
		justify-content: center
	.dogme
		margin-left: 0
		margin-top: 0.5rem
	.dogme-riz
		min-width: 0.5rem
		min-height: 0.5rem
		height: 1.8rem
		line-height: 1.5
