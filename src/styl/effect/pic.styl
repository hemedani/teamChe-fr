.uploaded-pic-wrapper
  display: flex
  flex-flow: row wrap
  justify-content: space-around
  >div
    position: relative
    margin-bottom: 0.5rem
    .image
      width: 5rem
      height: 5rem
      border-radius: 50%
      overflow: hidden
      img
        min-width: 100%
        height: 100%
    span
      position: absolute
      top: 0
      left: 0
      background-color: darken(abi(1), 20%)
      color: sefid(1)
      padding: 0.5rem
      font-size: 1rem
      border-radius: 50%

.edit-pic
  >div
    span
      background-color: ghermez(1)
      cursor pointer