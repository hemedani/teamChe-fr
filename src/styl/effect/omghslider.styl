 // ------- SHORO (ng-hide-add) ------------
@keyframes aksBoroAghab
  0%
    opacity 100%
  15%
    opacity 100%
    transform scale(1) translate3d(0, 0, 0)
  32%
    transform scale(0.7) translate3d(0, 0, 0)
  50%
    transform scale(0.8) translate3d(0, -180%, 0)
    opacity 0
  100%
    transform scale(0.9) translate3d(0, -180%, 0)
    opacity 0

@keyframes nH2BoroAghab
  0%
    opacity 100%
    transform translate3d(0, 0, 0)
  25%
    transform translate3d(40%, 0, 0)
  30%
    transform translate3d(40%, 0, 0)
    opacity 0
  100%
    transform translate3d(40%, 0, 0)
    opacity 0

@keyframes nH3BoroAghab
  0%
    opacity 100%
    transform translate3d(0, 0, 0)
  5%
    opacity 100%
    transform translate3d(0, 0, 0)
  25%
    transform translate3d(40%, 0, 0)
  30%
    transform translate3d(40%, 0, 0)
    opacity 0
  100%
    transform translate3d(40%, 0, 0)
    opacity 0

@keyframes nPBoroAghab
  0%
    opacity 100%
    transform translate3d(0, 0, 0)
  10%
    opacity 100%
    transform translate3d(0, 0, 0)
  25%
    transform translate3d(40%, 0, 0)
  30%
    transform translate3d(40%, 0, 0)
    opacity 0
  100%
    transform translate3d(40%, 0, 0)
    opacity 0
 // ------- PAYAN (ng-hide-add) ------------

  // ------- SHORO (ng-hide-remove) ------------
@keyframes aksBiaBalla
  0%
    transform translate3d(0, 110%, 0)
  22%
    transform translate3d(0, 110%, 0)
  55%
    transform translate3d(0, 0, 0)

@keyframes rH2BiaBalla
  0%
    opacity 0
  45%
    opacity 0
    transform translate3d(0, 60%, 0)
  65%
    opacity 100%
    transform translate3d(0, 0, 0)
  100%
    opacity 100%

@keyframes rH3BiaBalla
  0%
    opacity 0
  50%
    opacity 0
    transform translate3d(0, 60%, 0)
  65%
    opacity 100%
    transform translate3d(0, 0, 0)
  100%
    opacity 100%

@keyframes rPBiaBalla
  0%
    opacity 0
  55%
    opacity 0
    transform translate3d(0, 60%, 0)
  65%
    opacity 100%
    transform translate3d(0, 0, 0)
  100%
