.slider
  position relative
  height 100%
  overflow hidden
  background-color #000
  .slide
    position absolute
    top 0
    right 0
    width 100%
    height 100%
    img
      width 100%
      box-shadow 0px 25px 200px #000
    .ghabneveshte
      position absolute
      top 25%
      left 2rem
      text-align: center
    h2
      font-size 2.5rem
      margin 0.2rem 0
      padding 0.5rem 0
      background-color darken(bezh(0.35), 96%)
      border-radius 1rem
      color #eee
      box-shadow 4px 4px 4px 0px rgba(0,0,0,0.75)
    h3
      font-size 1.5rem
      margin 0.2rem 0
      padding 0.5rem
      background-color darken(bezh(0.35), 96%)
      border-radius 0.8rem
      color #eee
      box-shadow 4px 4px 4px 0px rgba(0,0,0,0.75)
    p
      font-size 0.8rem
      margin 0.2rem 0
      padding 0.5rem
      background-color darken(bezh(0.35), 96%)
      border-radius 0.5rem
      color #eee
      box-shadow 4px 4px 4px 0px rgba(0,0,0,0.75)
  .arrows
    position absolute
    top 50%
    right 0.8rem
    z-index 3
    opacity 0.5
    &:hover
      opacity 1

// poyanmeaeish
.slide
  &.ng-hide-add
    transition all 4500ms ease-out
    img
      animation aksBoroAghab 4500ms
    .ghabneveshte
      h2
        animation nH2BoroAghab 4500ms
      h3
        animation nH3BoroAghab 4500ms
      p
        animation nPBoroAghab 4500ms
  &.ng-hide-remove
    transition all 4500ms ease-in
    img
      animation aksBiaBalla 4500ms
    .ghabneveshte
      h2
        animation rH2BiaBalla 4500ms
      h3
        animation rH3BiaBalla 4500ms
      p
        animation rPBiaBalla 4500ms


