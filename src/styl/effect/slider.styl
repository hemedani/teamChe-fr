.slider
  height: 100%
  width: 100%
  background: #ddd
  position: absolute
  top: 0
  right: 0
  
  .slide
    height: 100%
    width: 100%
  

  // Handles the fancy shmancy dots
  .dotsContainer
    position: absolute
    bottom: 7%
    width: 100%
    height: 1rem
    text-align: center
    z-index: 99999

    .dot
      background: #222
      padding: 0px 0.4rem
      margin-right: 0.2rem
      cursor: pointer
      border-radius: 50%
    
    .isCurrent
      background: #fff
    
  

  // Arrows
  .nextArrow
    position: absolute
    top: 50%
    right: 5%
    cursor: pointer
    transition: all ease-in .2s
    color: #fff

    &:hover
      opacity: 0.5
      transform: scale(1.4)
      transition: all ease-in .2s
    
  

  .backArrow
    position: absolute
    top: 50%
    left: 5%
    cursor: pointer
    color: #fff

    transition: all ease-in .2s

    &:hover
      opacity: 0.5
      transform: scale(1.4)
      transition: all ease-in .2s
    
  


