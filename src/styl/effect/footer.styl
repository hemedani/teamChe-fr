footer
  display: flex
  flex-flow: row wrap
  color: tosi(1)
  padding: 1rem 0
  font-size: 0.9rem
  >div
    // margin-left: 1rem
    margin-top: 1.5rem
    text-align: center
    @media(min-width 800px)
      margin-top: 0
      text-align: right 
    padding: 0 1rem
    &:last-child
      margin-left: 0
  a
    display: block
    text-decoration: none
    line-height: 1.8rem
    color: tosi(1)
    &:visited
      color: abi(1)
  h3
    display: flex
    flex-direction: row
    font-size: 1.3rem
    font-weight: normal
    margin-bottom: 4rem
    color: lighten(tosi(1), 35%)
    &:after
      flex-grow: 1
      height: 1px
      content: '\a0'
      background-color: abi(1)
      position: relative
      top: 0.7em
      margin-right: 2rem
  .learn-more
    width: 100%
    @media(min-width 800px)
      width: 45%
    div
      padding: 0 3.5rem
      line-height: 1.5rem
  .links
    width: 100%
    @media(min-width 800px)
      width: 30%
  .knowledge
    width: 100%
    @media(min-width 800px)
      width: 25%