.darkarbar
  display flex
  flex-direction row
  flex-flow: row wrap
  justify-content space-between
  margin-bottom: 1rem
  .karbar
    margin-bottom: 1.5rem
    width: 32%

		.matnKarbar
			width: 100%
			text-align: center
			padding: 0.5rem
			font-size: 0.8rem
			font-weight: normal
			background-color: sorme(0.4)
			border 1px solid darken(abi(1), 65%)
			color: white
			border-radius: 0.4rem
			margin-bottom: 0.2rem
			margin-top: 0.2rem

		.esmKarbar
			width: 100%
			text-align: center
			padding: 0.5rem
			font-size: 1.5rem
			font-weight: normal
			background-color: abi(0.4)
			border 1px solid darken(abi(1), 65%)
			color: white
			border-radius: 0.4rem
			margin-bottom: 0.2rem
			margin-top: 0.2rem

		.darbar
      text-align: center
      background-color lighten(firoze(0.5), 65%)
      padding 10px 1rem
      border-radius 10px
      border 1px solid darken(abi(1), 65%)
      .matn-karbar
        text-align: right
        margin-bottom: 1rem
      a
        position relative
        img
          width: 8.5rem
          height: 8.5rem
          margin: 10px auto
          border-radius: 50%
          border: 2px solid sorme(1)
          cursor pointer
          filter grayscale(100%)
          transition all 0.3s ease
        &:hover
            img
              border 4px solid lighten(bezh(1), 85%)
              filter grayscale(0%)
      p
        font-size 12px
        margin 5px 0


