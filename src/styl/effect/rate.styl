.center-rate-wrapper
  color: tosi(1)
  margin-top: 1.5rem
  text-align: center
  .center-rates
    display: flex
    flex-flow: row wrap
    .center-rate-container
      width: 100%
      display: flex
      flex-flow: row wrap
    
    .center-rate
      width: 100%
      background-color: sefid(1)
      display: flex
      border-radius: 0.5rem
      shadow()
      border: 1px solid lighten(tosi(1), 70%)
      margin-bottom: 1rem
      flex-flow: row wrap
      align-items: center
      position: relative
      z-index: 2
      .rate-img
        flex: 2
        overflow: hidden
        img
          width: 6rem
          height: 6rem
          border: 2px solid abi(1)
          border-radius: 50%
      .rate-rate-text
        flex: 1 1 100%
        @media(min-width 50rem)
          flex: 15
    .reply-rate
      border-top-left-radius: 0
      border-top-right-radius: 0
      margin: -1.5rem 1rem 1rem 1rem
      z-index: 1
      border: 1px solid lighten(ghermez(1), 70%)

    .rate-rate-text
      .rate-text-detail
        border-bottom: 1px solid abi(1)
        padding: 2.2rem 0.5rem 1rem 0.5rem
        display: flex
        flex-flow: row wrap
        justify-content: flex-end
        @media(min-width 50rem)
          padding: 1rem
          justify-content: flex-start
        .rate-name
          width: 100%
          text-align: right
          font-size: 1.5rem
          color: tosi(1)
        .rate-three
          border: 1px solid abi(1)
          border-radius: 0.5rem
          padding: 0 0.5rem
          margin: 0.2rem 0
          @media(min-width 50rem)
            margin: 0 0.5rem
          span
            font-size: 0.6rem
            @media(min-width 50rem)
              font-size: 0.8rem
          .star-ratings
            direction: ltr
            margin-right: 0.5rem
      .rate-text
        padding: 1.5rem 1rem
        color: lighten(tosi(1), 20%)
        font-size: 0.9rem
        text-align: right
      .rate-vote
        position: absolute
        top: 0.5rem
        left: 1.5rem
        display: flex
        flex-flow: row wrap
        .each-rate-vote
          position: relative
          min-width: 2rem
          span
            font-size: 2rem
            position: absolute
            top: 0
            left: 0
            cursor: pointer
          i
            color: tosi(1)
            font-size: 0.8rem
            position: absolute
            top: 0.7rem
            left: 1.5rem
        .rate-vote-plus
          margin-left: 1.5rem
          span
            color: abi(1)
        .rate-vote-minus
          span
            color: ghermez(1)

.rate-wrapper
  display: flex
  flex-flow: row wrap
  width: 100%
  justify-content: space-between
  .rate-grid
    width: 32%
    .rate
      width: 100%
      display: flex
      flex-flow: row wrap
      justify-content: space-between
      .user-pic-rate
        width: 20%
        img
          width: 80%
          border-radius: 5%
      .details-rate
        width: 78%
