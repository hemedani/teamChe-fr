.dogme[disabled]
	background-color lighten(tosi(1), 50%) !important
	border 1px solid tosi(1) !important
	cursor: not-allowed !important
	&:hover
		color: tosi(1) !important
	&::after
		background-color: lighten(tosi(1), 70%) !important

